            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mobile_number\": \"9876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
